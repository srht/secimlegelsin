---
import Stats from '../components/Stats.astro';
import SehirlerSection from '../components/SehirlerSection.astro';
import HeroSection from '../components/HeroSection.astro';
import Layout from '../layouts/Layout.astro';
import Testimonials from '../components/Testimonials.astro';
import CallToAction from '../components/CallToAction.astro';
import Blog from '../components/Blog.astro';
import YeniTalepSection from '../components/YeniTalepSection.astro';
import Container from '../components/Container.astro';
import { createClient } from '@supabase/supabase-js';
import {getUser} from '../auth';
import CategoryPic from '../lib/categorypic';
import Alkis from '../components/Alkis.jsx';
import { supabase } from "../lib/supabase";

const id = Astro.url.searchParams.get('id')! || '';

//const user = await getUser(Astro.request);
const sessionData= await supabase.auth.getSession();
const { data, error } = await supabase.from("requests").select().eq('id', id).limit(1);
const requestDetail=data[0];
console.log(sessionData?.data?.session?.user?.id)
const userData=sessionData?.data?.session?.user;
